.ui-background{widith:100%;height:80rpx;background-color:#9acd32;}

.ui-order-list{padding:0 30rpx;position:relative;top:-80rpx;}
.ui-order-list .ui-item{display:flex;flex-direction:row;justify-content:space-between;
    align-items:flex-end;
    height:224rpx;padding:0 10rpx;margin:8rpx 0 40rpx;background-color:#fff;box-sizing:border-box;border-radius:10rpx;box-shadow:2px 3px 8px rgba(0,0,0,.1)}
.ui-order-list .cell-thumb{width:120px;height:90px;}

.ui-order-list .ui-content{display:flex;flex-direction:column;height:240rpx;padding-right:60rpx;}
.ui-order-list .cell-title{display:block;padding:80rpx 0 10rpx;font-size:36rpx;font-weight:700;color:#434343;text-align:right;}
.ui-order-list .cell-info{display:block;font-size:24rpx;color:#999;text-align:right;}
